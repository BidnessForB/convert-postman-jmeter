#!/usr/bin/env node

'use strict';

console.log('hello');

var os = require('os'),
  convertPostmanJmeter = require('../lib/convert-postman-jmeter'),
  argv = require('yargs')
    .usage('Usage: $0 -p [file] -j [file]')
    .alias('p', 'postman')
    .describe('p', 'Load project postman')
    .alias('j', 'jmeter')
    .describe('j', 'Output project JMeter')
    .alias('o', 'override')
    .describe('o', 'Override project JMeter')
    .default('o', false)
    .demandOption(['p'])
    .epilog('Copyright 2019').argv;

const options = {
  projectPostman: argv.p,
  projectJmeter: argv.j,
  override: argv.o
};

convertPostmanJmeter.convertProject(options);
